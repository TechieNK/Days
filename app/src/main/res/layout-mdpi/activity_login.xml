<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/linear_layout"
        android:gravity="center"
        android:background="@drawable/blue_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_layout"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/login_tv"/>
        <TextView
            android:text="______________________________"
            android:layout_below="@id/login_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/hline1"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_below="@+id/hline1"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:inputType="textEmailAddress"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"
            android:padding="10dp"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:drawableTint="@android:color/holo_blue_dark"
            android:id="@+id/email_et"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/email_24"
            android:drawablePadding="9dp"
            />
        <EditText
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/email_et"
            android:inputType="textPassword"
            android:textColor="@android:color/darker_gray"
            android:hint="Password"
            android:id="@+id/password_et"
            android:background="@drawable/custom_et"
            android:drawableLeft="@drawable/lock_24"
            android:drawableTint="@android:color/holo_blue_dark"
            android:drawablePadding="9dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forget_password_tv"
            android:text="Forgot password"
            android:layout_below="@+id/password_et"
            android:layout_alignRight="@+id/password_et"
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@+id/password_et"
            android:textColor="@android:color/darker_gray"/>
        <Button
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="LOGIN"
            android:id="@+id/login_button"
            android:layout_below="@id/forget_password_tv"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"/>

        <TextView
            android:text="------------- OR ---------------"
            android:layout_below="@id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:id="@+id/hline2"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/hline2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/google_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google_logo"
                />
            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/google_icon"
                android:src="@drawable/phone"
                android:layout_marginLeft="20dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp"

            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Don't have an account? "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up_tv"
                android:padding="2dp"
                android:text="Sign up"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>









