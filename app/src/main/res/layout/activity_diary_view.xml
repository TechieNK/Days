<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiaryViewActivity"
    android:background="@drawable/header_login"
    >
    <ImageView
        android:id="@+id/bck_arrow_icon_dmain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back_arrow_icon"
        android:padding="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/txtd_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your memories"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@id/bck_arrow_icon_dmain"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/main_crd_dmain"
        android:background="@android:color/white"
        android:layout_below="@id/txtd_1"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="6dp"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/visibility_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:padding="50dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="Diaries"/>
            <GridLayout
                android:id="@+id/grid_dmain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="20dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/create_diary_text"
        android:layout_above="@id/create_diary_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:textSize="23sp"
        android:padding="10dp"
        android:text="We want you to keep track of your wonderful memories along with colors of them. "
        android:layout_marginBottom="45dp"
        />
    <Button
        android:id="@+id/create_diary_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@drawable/bt_uifb"
        android:text="Share your memories"
        android:textColor="@color/colorPurple"
        android:drawableLeft="@drawable/mem_create_icon"
        android:drawableTint="@color/colorPurple"
        android:drawablePadding="2dp"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>