<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FriendsActivity"
    android:background="@drawable/header_login"
    >
    <TextView
        android:id="@+id/friends_greet_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends_greet_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@id/add_friends_button"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/no_friends_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It seems you haven't added your friends yet"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friends_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/add_friends_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_ui"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Add friends"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:drawableLeft="@drawable/add_icon"
        android:drawableTint="@android:color/white"
        android:drawablePadding="10dp"
        />
</RelativeLayout>